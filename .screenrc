vbell off                                # default: off
vbell_msg "   -- Oumpf,Oumpf!! --   "   # default: "Wuff,Wuff!!"

autodetach on                           # default: on
startup_message off                     # default: on
nethack on                              # default: off
crlf off                                # default: off
multiuser off
defscrollback 30000                      # default: 100
silencewait 15                  # default: 30

# bufferfile:   The file to use for commands
#               "readbuf" ('<') and  "writebuf" ('>'):
bufferfile            $HOME/.screen_exchange

shell -$SHELL
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

caption always "%{=}%?%{r}%H %L=%{+b}%?%{b}%-Lw%47L>%?%{w}%n*%f %t %?%{b}%+Lw%?%{g}%-31=%c %l %Y-%m-%d"
 caption always "%{= 11}%{+b w}Ecran: %n | %h %=%t %c"
 caption always "%{= 11}%{+b w}Ecran: %n | %h %t %=%D %{G}%c %d/%M/%Y"
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"

activity "Activity in %t(%n)"

termcap  xterm hs@:cs=\E[%i%d;%dr:im=\E[4h:ei=\E[4l
terminfo xterm hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l
termcapinfo  xterm Z0=\E[?3h:Z1=\E[?3l:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l
termcapinfo xterm* OL=100
termcapinfo xterm 'VR=\E[?5h:VN=\E[?5l'
termcapinfo xterm 'k1=\E[11~:k2=\E[12~:k3=\E[13~:k4=\E[14~'
termcapinfo xterm 'kh=\EOH:kI=\E[2~:kD=\E[3~:kH=\EOF:kP=\E[5~:kN=\E[6~'
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
termcapinfo xterm 'vi=\E[?25l:ve=\E[34h\E[?25h:vs=\E[34l'
termcapinfo xterm 'XC=K%,%\E(B,[\304,\\\\\326,]\334,{\344,|\366,}\374,~\337'
termcapinfo xterm* be
termcap  vt100* ms:AL=\E[%dL:DL=\E[%dM:UP=\E[%dA:DO=\E[%dB:LE=\E[%dD:RI=\E[%dC
#terminfo vt100* ms:AL=\E[%p1%dL:DL=\E[%p1%dM:UP=\E[%p1%dA:DO=\E[%p1%dB:LE=\E[%p1%dD:RI=\E[%p1%dC
termcapinfo linux C8
termcapinfo xterm|xterms|xs|rxvt|xterm-color ti@:te@

# advertise hardstatus support to $TERMCAP
termcapinfo  * '' 'hs:ts=\E_:fs=\E\\:ds=\E_\E\\'

bind k
bind ^k
bind .
bind ^\
bind \\
bind ^h
bind h

bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history

bindkey -k k1 prev
bindkey -k k2 next
bindkey -k k5 detach
bindkey -k k6 kill
bindkey -k k8 screen
bindkey -k k; title


register [ "\033:se noai\015a"
register ] "\033:se ai\015a"
bind ^] paste [.]

bind = resize =
bind + resize +3
bind - resize -3
